{
  "name": "hbc",
  "version": "1.0.0",
  "description": "HBC Coffee Week React, NodeJS, SQLite on Heroku",
  "authot": "Wesley Fung",
  "private": true,
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "lodash": "^4.17.11",
    "node-fetch": "^2.2.1",
    "node-sass": "^4.10.0",
    "nprogress": "^0.2.0",
    "react": "^16.6.1",
    "react-dom": "^16.6.1",
    "react-scripts": "2.1.1",
    "sqlite3": "^4.0.4",
    "tachyons": "^4.11.1"
  },
  "cacheDirectories": [
    "node_modules",
    "react-ui/node_modules"
  ],
  "devDependencies": {
    "concurrently": "^4.0.1"
  },
  "scripts": {
    "start": "node server",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "client": "cd client && yarn start",
    "server": "nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "heroku-postbuild": "mv client/build ../ && cd client/ && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
